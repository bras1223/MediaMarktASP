
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
    MediaMarkt.Models.Gebruiker g = Session["Gebruiker"] as MediaMarkt.Models.Gebruiker;
}

<h2>Account</h2>
<h3>Welkom, @g.Voornaam</h3>
<div class="col-md-6">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Uw gegevens</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped">
                <thead>
                </thead>
                <tbody>
                    <tr>
                        <th>Voornaam</th>
                        <td>@g.Voornaam</td>
                    </tr>
                    <tr>
                        <th>Tussenvoegsel</th>
                        <td>@g.Tussenvoegsel</td>
                    </tr>
                    <tr>
                        <th>Achternaam</th>
                        <td>@g.Achternaam</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@g.Email</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-6">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Uw Adres</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped">
                <thead>
                </thead>
                <tbody>
                    <tr>
                        <th>Straatnaam</th>
                        <td>@g.Straatnaam</td>
                    </tr>
                    <tr>
                        <th>Huisnummer</th>
                        <td>@g.Huisnummer</td>
                    </tr>
                    <tr>
                        <th>Postcode</th>
                        <td>@g.Postcode</td>
                    </tr>
                    <tr>
                        <th>Stad</th>
                        <td>@g.Stad</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-12">
<div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title">Uw bestellingen  <span class="badge">@g.bestellingen.Count</span></h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover">
                <thead>
                    <th>Bestelnummer</th>
                    <th>Besteldatum</th>
                    <th>Totaalprijs</th>
                    <th>Status</th>
                    <th></th>
                </thead>
                <tbody>
                    @foreach (MediaMarkt.Models.Bestelling bestelling in g.bestellingen)
                    {
                        <tr>
                            <td>@bestelling.Bestelnummer</td>
                            <td>@bestelling.Besteldatum</td>
                            <td>€@bestelling.Totaalprijs</td>
                            <td>@bestelling.Status</td>
                            <td><a type="button" class="btn btn-info" href='@Url.Action("Factuur", new { bestelnummer = bestelling.Bestelnummer})'>Bekijk Factuur</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>