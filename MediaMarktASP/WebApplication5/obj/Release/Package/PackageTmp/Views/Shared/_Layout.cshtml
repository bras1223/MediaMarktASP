<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Media Markt</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Controllers/fonts/"


    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="container">
        <div class="logo">
            <img src="~/Content/logo-large.png" alt="logo" />
        </div>
    </div>

    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Media Markt", "index", "Webshop", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <nav id="top-navigation">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Categoriën", "Categoriën", "Webshop", new { id = "",  area = ""}, new { @class = "navbar-nav" })</li>
                    <li>@Html.ActionLink("Winkelmandje", "Winkelmandje", "Webshop", new { area = "" }, new { @class = "navbar-nav" })</li>
                </ul>
            </nav>
            <form class="navbar-form navbar-right" role="search">
                <div class="form-group">
                    <input class="form-control" placeholder="Wat zoek je?" type="text">
                </div>
                <button type="submit" class="btn btn-default">Zoeken</button>
            </form>
        @{
            if (Session["Gebruiker"] != null)
            {
                <div class="navbar-form navbar-right">
                    <a href='@Url.Action("Account", "Gebruiker")' class="btn btn-success btn-sm">Mijn Account</a>
                    <a href='@Url.Action("Uitloggen", "Login")' class="btn btn-danger btn-sm">Uitloggen</a>
                </div>
            }
            else
            {
                <div class="navbar-form navbar-right">
                    <a href='@Url.Action("Index", "Login")' class="btn btn-success btn-sm">Login</a>
                    <a href='@Url.Action("Registreren", "Login")' class="btn btn-danger btn-sm">Registreren</a>
                </div>
            }
        }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Media Markt</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>